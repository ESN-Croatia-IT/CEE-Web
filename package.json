    "dev:css": "tailwindcss -i src/input.css -o src/static/output.css --watch",
    "dev:ts": "tsx watch src/index.ts",
    "dev": "npm-run-all --parallel dev:*",
    "copy:static": "cpy 'src/static/**/*' 'dist/static/'",
    "copy:views": "cpy 'src/views/**/*' 'dist/views/'",
    "copy:data": "cpy 'src/data.json' 'dist/' --flat",
    "copy": "npm-run-all copy:*",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/static/output.css --minify",
    "build:ts": "tsc",
    "build": "npm-run-all build:* copy",
    "start": "node --env-file '.env' dist/index.js",
    "release": "npm-run-all build start"
  },
