  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "copy:static": "cpy 'src/static/**/*' 'dist/static/' --parents",
    "copy:views": "cpy 'src/views/**/*' 'dist/views/' --parents",
    "copy:all": "npm-run-all copy:static copy:views",
    "dev:tailwind": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/static/output.css --watch",
    "dev:typescript": "tsc -w",
    "dev:server": "nodemon --env-file='.env' dist/index.js",
    "dev": "npm-run-all --parallel copy:all dev:tailwind dev:typescript dev:server",
    "build:tailwind": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --minify",
    "build:typescript": "tsc",
    "build": "npm-run-all build:tailwind build:typescript",
    "start": "node --env-file '.env' dist/index.js",
    "release": "npm-run-all build copy:all start"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "cpy-cli": "^6.0.0",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.2.0"
  }
}
