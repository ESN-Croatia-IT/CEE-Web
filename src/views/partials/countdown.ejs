<div class="my-4 sm:my-8 md:my-18">
  <div class="flex justify-center" id="countdown">
    <div class="flex flex-col items-center">
      <div
        class="border-<%=accentColour%> m-2 flex h-16 w-16 items-center justify-center rounded-xl border-5 bg-white sm:mx-4 sm:h-24 sm:w-24 md:mx-6 md:h-32 md:w-32">
        <span
          class="text-<%=accentColour%> text-2xl font-bold sm:text-3xl md:text-4xl"
          id="days">
          50
        </span>
      </div>
      <small class="text-base sm:text-2xl md:text-3xl">Days</small>
    </div>
    <div class="flex flex-col items-center">
      <div
        class="border-<%=accentColour%> m-2 flex h-16 w-16 items-center justify-center rounded-xl border-5 bg-white sm:mx-4 sm:h-24 sm:w-24 md:mx-6 md:h-32 md:w-32">
        <span
          class="text-<%=accentColour%> text-2xl font-bold sm:text-3xl md:text-4xl"
          id="hours">
          50
        </span>
      </div>
      <small class="text-base sm:text-2xl md:text-3xl">Hours</small>
    </div>
    <div class="flex flex-col items-center">
      <div
        class="border-<%=accentColour%> m-2 flex h-16 w-16 items-center justify-center rounded-xl border-5 bg-white sm:mx-4 sm:h-24 sm:w-24 md:mx-6 md:h-32 md:w-32">
        <span
          class="text-<%=accentColour%> text-2xl font-bold sm:text-3xl md:text-4xl"
          id="minutes">
          50
        </span>
      </div>
      <small class="text-base sm:text-2xl md:text-3xl">Minutes</small>
    </div>
    <div class="flex flex-col items-center">
      <div
        class="border-<%=accentColour%> m-2 flex h-16 w-16 items-center justify-center rounded-xl border-5 bg-white sm:mx-4 sm:h-24 sm:w-24 md:mx-6 md:h-32 md:w-32">
        <span
          class="text-<%=accentColour%> text-2xl font-bold sm:text-3xl md:text-4xl"
          id="seconds">
          50
        </span>
      </div>
      <small class="text-base sm:text-2xl md:text-3xl">Seconds</small>
    </div>
  </div>
</div>

<script>
  function updateCountdown() {
    const now = new Date();
    const targetDate = new Date("<%=eventDate%>");

    if (now > targetDate) {
      targetDate.setFullYear(targetDate.getFullYear() + 1);
    }

    const diff = targetDate - now;
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    document.getElementById('days').textContent = days;
    document.getElementById('hours').textContent = hours;
    document.getElementById('minutes').textContent = minutes;
    document.getElementById('seconds').textContent = seconds;
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>
