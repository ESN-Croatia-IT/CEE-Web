<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive Header</title>

    <style>
      @media (min-width: 500px) {
        .foggy-overlay {
          background-color: rgba(
            255,
            255,
            255,
            0.4
          );
          backdrop-filter: blur(10px);
        }
      }
    </style>

  </head>
  <body class="m-0 p-0">
    <header class="relative w-full overflow-hidden bg-white">
      <div class="relative w-full">
        <img
          src="../images/perks/location.jpg"
          alt="Header Image"
          class="z-0 h-40 w-full object-cover sm:h-48 md:h-56"
          style="image-rendering: auto" />

        <div
          class="z-5 foggy-overlay pointer-events-none absolute inset-0"></div>

        <div
          class="absolute left-1/2 top-1/2 z-10 -translate-x-1/2 -translate-y-1/2">
          <div
            class="flex h-32 w-32 items-center justify-center overflow-hidden rounded-full border-4 border-esn-lightblue bg-white shadow-md sm:h-40 sm:w-40">
            <img
              src="../images/flower/CEE_skii.png"
              alt="Iris Flower"
              class="h-full w-full object-contain" />
          </div>
        </div>
      </div>
    </header>

  </body>
</html>
